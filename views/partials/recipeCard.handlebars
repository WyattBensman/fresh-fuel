<div class="col-md-4 mb-3">
    <div class="card" style="width: 85%;">
        <!-- Need Image Source -->
        <img src="/images/greek-salmon-bowl.jpeg" class="card-img-top" style="height: 150px; width: 100%;" alt="..." />
        <div class="card-body bg-taupe">
            <!-- Need Title -->
            <div class="row align-items-center">
                <h5 class="card-title col-10">{{food_name}}</h5>
                <i class="fa-regular fa-heart heart-icon" style="color: #e90c0c; cursor: pointer;"></i>
            </div>
            <div class="row">
                <div class="col-6 text-center">
                    <!-- Need cook time -->
                    <p class="mb-0"><b>{{cook_time}}</b></p>
                    <p>Cook Time</p>
                </div>
                <!-- Need to grab # of Ingredients [Ingredients.length] -->
                <div class="col-6 text-center">
                    <p class="mb-0">{{ingredients.length}}</p>
                    <p>Ingredients</p>
                </div>
            </div>
            <div class="text-center">
                {{! Brnigs you to recipe ID }}
                <a href="/recipes/{{id}}" class="btn btn-warning">View Recipe</a>
            </div>
        </div>
    </div>
</div>